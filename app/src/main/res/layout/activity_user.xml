<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Select Source -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Source:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp"/>

    <!-- Select Destination -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Destination:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginBottom="24dp"/>

    <!-- Find Bus Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_find_buses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Bus"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Available Buses Label -->
    <TextView
        android:id="@+id/txt_available_buses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Buses:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>

    <!-- List of Available Buses -->
    <ListView
        android:id="@+id/list_buses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>
</LinearLayout>
